/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode() : val(0), left(nullptr), right(nullptr) {}
 *     TreeNode(int x) : val(x), left(nullptr), right(nullptr) {}
 *     TreeNode(int x, TreeNode *left, TreeNode *right) : val(x), left(left), right(right) {}
 * };
 */
class Solution {
public:
    int left_count(TreeNode* node){
        int h=0;
        while(node){
            h++;
            node = node->left;
        }
        return h;
    }

    int right_count(TreeNode* node){
        int h=0;
        while(node){
            h++;
            node = node->right;
        }
        return h;
    }
    int countNodes(TreeNode* root) {
        if(!root) return 0;

        int lc = left_count(root);
        int rc = right_count(root);

        if(lc==rc) return (1<<lc)-1; // 2^n - 1 total node in a completly filled binary tree

        return 1 + countNodes(root->left) + countNodes(root->right);

    }
};
