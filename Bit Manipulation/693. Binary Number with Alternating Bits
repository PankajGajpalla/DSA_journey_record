class Solution {
public:
    bool hasAlternatingBits(int n) {
        unsigned int x = n ^ (n>>1); // 101010 ^ 010101 = 111111
        return (x & (x+1)) == 0; // 0111111 & 1000000 = 0000000
    }
};


