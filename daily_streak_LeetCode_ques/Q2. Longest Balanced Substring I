class Solution {
public:
    int longestBalanced(string s) {
        string pk = s;

        int n = s.size();
        int maxLen = 0;

        for (int i = 0; i < n; i++) {
            int freq[26] = {0};
            for (int j = i; j < n; j++) {
                freq[pk[j] - 'a']++;

                int count = 0, val = 0;
                bool balanced = true;
                for (int k = 0; k < 26; k++) {
                    if (freq[k] > 0) {
                        if (count == 0) {
                            val = freq[k];
                            count++;
                        } else if (freq[k] != val) {
                            balanced = false;
                            break;
                        }
                    }
                }
                if (balanced) {
                    maxLen = max(maxLen, j - i + 1);
                }
            }
        }

        return maxLen;
    }
};Â©leetcode
