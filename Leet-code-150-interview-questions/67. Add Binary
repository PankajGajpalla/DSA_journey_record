class Solution {
public:
    string addBinary(string a, string b) {
        string result = "";
        int i = a.length() - 1;
        int j = b.length() - 1;
        int carry = 0;

        while(i>=0 || j>=0){
            int sum = carry;

            if(i>=0){
                sum += a[i] - '0';
                i--;
            }
            if(j>=0){
                sum += b[j] - '0';
                j--;
            }

            carry = sum>1? 1:0;
            result = to_string(sum%2) + result; // adding carry part in front and the rest is shifted to get the correct answer ..
        }

        if(carry){
            result = to_string(carry) + result;
        }

        return result;
    }
};
