class Solution:
    def findMedianSortedArrays(self, nums1: List[int], nums2: List[int]) -> float:
        n = len(nums1)
        m = len(nums2)

        merge = []
        i, j = 0,0
        
        while(i<n and j<m):
            if(nums1[i]<nums2[j]):
                merge.append(nums1[i])
                i +=1
            else:
                merge.append(nums2[j])
                j +=1
        while(i<n):
            merge.append(nums1[i])
            i +=1
        while(j<m):
            merge.append(nums2[j])
            j +=1
        
        if (n+m)%2 !=0:
            return merge[(n+m)//2]
        
        return (merge[(n+m)//2 -1] + merge[(n+m)//2])/2
